{
  "name": "@menardi/redux-persist",
  "version": "6.0.0",
  "description": "Persist and rehydrate Redux stores",
  "author": "Menardi",
  "license": "MIT",
  "homepage": "https://github.com/menardi/redux-persist#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "menardi/redux-persist",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./integration/react": {
      "types": "./dist/integration/react.d.ts",
      "import": "./dist/integration/react.js"
    }
  },
  "typesVersions": {
    "*": {
      "integration/react": [
        "dist/integration/react.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "lint": "eslint",
    "test": "vitest run --silent=passed-only",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.11.2",
    "@stylistic/eslint-plugin": "^5.8.0",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/sinon": "^21.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lodash": "^4.17.15",
    "redux": "^5.0.1",
    "rimraf": "^6.1.2",
    "sinon": "^21.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "redux": ">4.0.0"
  }
}
