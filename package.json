{
  "name": "redux-persist",
  "version": "6.0.0",
  "description": "persist and rehydrate redux stores",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "rt2zz/redux-persist",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./storage": {
      "import": "./dist/storage/index.js",
      "types": "./dist/storage/index.d.ts"
    },
    "./storage/session": {
      "import": "./dist/storage/session.js",
      "types": "./dist/storage/session.d.ts"
    },
    "./integration/react": {
      "import": "./dist/integration/react.js",
      "types": "./dist/integration/react.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "precommit": "lint-staged",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "version": "npm run clean && npm run build && git add LIBSIZE.md"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "git add"
    ]
  },
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/rt2zz/redux-persist#readme",
  "devDependencies": {
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.2",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^16.14.69",
    "@types/sinon": "^21.0.0",
    "eslint": "^4.16.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "lodash": "^4.17.15",
    "redux": "^4.0.4",
    "redux-mock-store": "^1.5.1",
    "rimraf": "^2.7.1",
    "sinon": "^4.2.2",
    "storage-memory": "0.0.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "redux": ">4.0.0"
  }
}
